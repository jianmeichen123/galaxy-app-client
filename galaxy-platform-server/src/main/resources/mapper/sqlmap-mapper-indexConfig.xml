	<select id="selectConfigByResource" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
			ta.*,tb.resource_mark,tb.resource_name
		from 
			platform_index_config ta
			left join
			platform_resource tb
			on ta.resource_id = tb.id
		<where>
